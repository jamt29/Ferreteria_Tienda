@model Ferreteria.Models.Departamento

@{
    ViewData["Title"] = "Delete";
    ViewBag.OcultarHeader = true;
}


<header class="bg-danger py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Eliminar Producto <i class="bi bi-trash"></i></h1>
        </div>
    </div>
</header>


<div class="container mt-5 text-center ">
    <dl class="row justify-content-center align-content-center text-center">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <div>
        <button class="btn btn-danger ml-1" onclick="confirmarBorrado()">Borrar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Lista Principal</a>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" id="btnBorrar" class="btn btn-danger" style="display: none" />
    </form>
</div>


