@model RegistroViewModel

@{
	ViewData["Title"] = "Registro";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form asp-action="Registro">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Registrarse</h2>
                                <p class="text-white-50 mb-5">Por favor ingresa un correo y una contraseña para registrarte!</p>

                                <div class="form-outline form-white mb-4">
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="Password">Contraseña</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5">Registrarse</button>
                            </div>

                            <div>
                                <p class="mb-0">
                                    ¿Ya tienes una cuenta?
                                </p>
                                <p>
                                    Inicia sesión en ella! <a asp-action="Login" class="text-white-50 fw-bold">Iniciar sesión</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}