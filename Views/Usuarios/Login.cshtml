@model LoginViewModel

@{
    ViewData["Title"] = "Ingresar";
}

<div class="container-fluid">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Iniciar sesión</h2>
                            <p class="text-white-50 mb-5">Por favor ingresa un correo y una contraseña para iniciar sesión!</p>

                            <div class="form-outline form-white mb-4">
                                <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                <label class="form-label" asp-for="Email">Email</label><br />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                <label class="form-label" asp-for="Password">Contraseña</label><br />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                 <input asp-for="Recuerdame" type="checkbox" class="form-check-input" />
                                 <label asp-for="Recuerdame" class="form-check-label"></label><br />
                                 <span asp-validation-for="Recuerdame" class="text-danger"></span>
                            </div>


                            <button class="btn btn-outline-light btn-lg px-5">Iniciar sesión</button>

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                            </div>

                        </div>

                        <div>
                            <p class="mb-0">
                                ¿No tienes una cuenta?
                            </p>
                            <p>
                                 Registrate! <a asp-action="Registro" class="text-white-50 fw-bold">Registrarse</a>
                            </p>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}